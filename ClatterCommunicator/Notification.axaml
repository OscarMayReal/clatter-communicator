<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ClatterCommunicator"
        x:Class="ClatterCommunicator.Notification"
        x:DataType="local:Notification"
        Width="300"
        Height="120"
        Background="#34353A"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="35"
        ShowInTaskbar="False"
        Topmost="True"
        Title="Notification">

    <Grid RowDefinitions="35,*">
        <!-- Title Bar -->
        <Grid Background="#34353A" Height="35">
            <Image Source="Assets/images/logodark.png" HorizontalAlignment="Left" Margin="10,0,0,0" Height="15" Width="20"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" FontSize="13">
                Clatter Communicator
            </TextBlock>
        </Grid>

        <!-- Message Body -->
        <Border Grid.Row="1" Background="#2B2C30" CornerRadius="5" Margin="10" Padding="8 0 8 8">
            <StackPanel>
                <!-- Sender and Channel combined -->
                <TextBlock Text="{Binding SenderAndChannel}" 
                           Foreground="#DCF3FF" 
                           FontWeight="Bold" 
                           FontSize="16"
                           TextWrapping="Wrap"/>

                <!-- Message Content slightly larger -->
                <TextBlock Text="{Binding Message.content}" 
                           Foreground="#FFFFFF" 
                           FontSize="14"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>